{
  "schedule": [
    "after 7am on Monday"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboardApproval",
    "github>renovatebot/.github"
  ],
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        ".*"
      ],
      "automerge": false
    },
    {
      "matchPackagePatterns": [
        "black"
      ],
      "schedule": "every 30 days"
    }
  ]
}
