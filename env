#!/bin/bash
###This file contains the environment variables used by bash and zsh

#function to add folder to PATH environment variable
#this function takes 1 argument, the folder, which should be added
pathaddbegin() {
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
            PATH="$1${PATH:+":$PATH"}"
        fi
}

pathaddend() {
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
            PATH="$PATH:$1"
        fi
}


if [ -d $HOME/.local/bin ]; then
	pathaddend $HOME/.local/bin
fi

#set environment variable for standard editor to vim, also for visual
export VISUAL=vim
export EDITOR="$VISUAL"

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    pathaddend $HOME/bin
fi
