[include]
    path = ~/.gituserconfig
[advice]
    skippedCherryPicks = false
    statusHints = false
[alias]
    ap = add --patch
    br = branch
    ci = commit
    cia = commit --amend
    cian = cia --no-edit
    cm = !(git branch --list | grep master && git checkout master) || git checkout main
    co = checkout
    dca = diff --cached
    delmrgmain = "!git branch --merged main | grep  -v '\\*\\|main' | xargs -n 1 git branch -d"
    delmrgmas = "!git branch --merged master | grep  -v '\\*\\|master' | xargs -n 1 git branch -d"
    fpu = push --force-with-lease
    fpus = fpu --push-option=ci.skip
    glog = log --pretty=format:\"%h %s\" --graph
    last = log --stat -1 HEAD
    rbc = !(GIT_EDITOR=true git rebase --continue)
    slog = log --stat
    st = status -s
    unpushed = log @{u}.. --pretty=format:'%h %an %s'
[checkout]
    ignoreSubmodules = dirty
[color]
    ui = true
[commit]
    gpgsign = true
    verbose = true
[core]
    excludesfile = ~/.gitignore
    whitespace = blank-at-eof,blank-at-eol,space-before-tab,tab-in-indent
[credential]
    helper = cache
[diff]
    ignoreSubmodules = dirty
    tool = vimdiff
[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f
[init]
    defaultBranch = main
    templateDir = ~/.git-template
[log]
    abbrevCommit = true
[merge]
    tool = vimdiff
[pull]
    rebase = true
[push]
    default = simple
    followTags = true
    signed = true
[rebase]
    autosquash = true
    autostash = true
[status]
    submoduleSummary = true
[submodule]
    recurse = true
[user]
    useConfigOnly = true
[rerere]
    enabled = true
[includeIf "hasconfig:remote.*.url:git@github.com:*/**"]
    path = ~/.github_userconfig
