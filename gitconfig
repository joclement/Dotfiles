[include]
    path = ~/.gituserconfig
[alias]
    ap = add --patch
    br = branch
    ci = commit
    cia = commit --amend
    cian = commit --amend --no-edit
    cm = !(git branch --list | grep master && git checkout master) || git checkout main
    co = checkout
    dca = diff --cached
    delmrgmas = "!git branch --merged master | grep  -v '\\*\\|master' | xargs -n 1 git branch -d"
    delmrgmain = "!git branch --merged main | grep  -v '\\*\\|main' | xargs -n 1 git branch -d"
    fpu = push --force-with-lease
    glog = log --pretty=format:\"%h %s\" --graph
    last = log --stat -1 HEAD
    ll = log --pretty=format:\"%C(yellow)%h%Cred%d\\\\ %Creset%s%Cblue\\\\ [%cn]\" --decorate --numstat
    slog = log --stat
    st = status
    unpushed = log @{u}.. --pretty=format:'%h %an %s'
[push]
    default = simple
    followTags = true
    signed = true
[color]
    ui = true
[diff]
    tool = vimdiff
[advice]
    statusHints = false
    skippedCherryPicks = false
[core]
    excludesfile = ~/.gitignore
    whitespace = blank-at-eof,blank-at-eol,space-before-tab,tab-in-indent
[merge]
    tool = vimdiff
[log]
    abbrevCommit = true
[commit]
    gpgsign = true
    verbose = true
[credential]
    helper = cache
[status]
    submoduleSummary = true
[pull]
    rebase = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[rebase]
    autostash = true
    autosquash = true
[init]
    defaultBranch = main
[submodule]
    recurse = true
