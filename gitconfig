# vi: ft=gitconfig

[include]
    path = ~/.gituserconfig
[advice]
    skippedCherryPicks = false
    statusHints = false
    forceDeleteBranch = false
[alias]
    ap = add --patch
    br = branch
    ci = commit
    cia = ci --amend
    cian = cia --no-edit
    cm = !git checkout $(git default-branch)
    co = checkout
    dca = diff --cached
    default-branch = !git show-ref --verify --quiet refs/heads/main \
        && echo main || echo master
    fpu = push --force-with-lease --force-if-includes
    fpus = fpu --push-option=ci.skip
    glog = log --pretty=format:\"%h %s\" --graph
    rbc = rebase --continue
    rbm = "!f() { \
                    branch=$(git default-branch); git rebase \"$branch\"; \
                 }; f"
    rbim = "!f() { \
                    branch=$(git default-branch); git rebase -i \"$branch\"; \
                 }; f"
    rbcn = !(GIT_EDITOR=true git rbc)
    rbs = rebase --skip
    slog = log --stat
    st = status
    unpushed = log @{u}.. --pretty=format:'%h %an %s'
[checkout]
    ignoreSubmodules = dirty
[color]
    ui = true
[commit]
    gpgsign = true
    verbose = true
[core]
    excludesfile = ~/.gitignore
    whitespace = trailing-space,space-before-tab,cr-at-eol
[credential]
    helper = cache
[diff]
    ignoreSubmodules = dirty
    tool = vimdiff
[fetch]
    parallel = 0
    prune = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f
[format]
    signOff = true
[init]
    defaultBranch = main
    templateDir = ~/.git-template
[log]
    abbrevCommit = true
[merge]
    tool = vimdiff
[pull]
    rebase = true
    prune = true
    tags = true
[push]
    default = simple
    followTags = true
    signed = true
[rebase]
    autosquash = true
    autostash = true
[status]
    submoduleSummary = true
[submodule]
    recurse = true
[tag]
    gpgSign = true
[user]
    name = Joris Clement
    useConfigOnly = true
[rerere]
    enabled = true
[includeIf "hasconfig:remote.*.url:git@github.com:*/**"]
    path = ~/.github_userconfig
