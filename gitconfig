[include]
    path = ~/.gituserconfig
[alias]
    co = checkout
    st = status
    amend = commit -a --amend
    ci = commit
    br = branch
    wipe = !git add -A && git commit -qm WIPE
    slog = log --stat
    last = log --stat -1 HEAD
    ll = log --pretty=format:\"%C(yellow)%h%Cred%d\\\\ %Creset%s%Cblue\\\\ [%cn]\" --decorate --numstat
    glog = log --pretty=format:\"%h %s\" --graph
    cia = commit --amend
    cian = commit --amend --no-edit
    unpushed = log @{u}.. --pretty=format:'%h %an %s'
    dca = diff --cached
    ap = add --patch
    fpu = push --force-with-lease
[push]
    default = simple
    followTags = true
[color]
    ui = true
[diff]
    tool = vimdiff
[advice]
    statusHints = false
[core]
    whitespace = blank-at-eof,blank-at-eol,space-before-tab,tab-in-indent
    excludesfile = ~/.gitignore
[merge]
    tool = vimdiff
[log]
    abbrevCommit = true
[commit]
    gpgsign = true
    verbose = true
[credential]
    helper = cache
